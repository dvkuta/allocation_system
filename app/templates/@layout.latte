<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Allocation system for ZCU">
    <meta name="keywords" content="Project, Secretariat">
    <meta name="author" content="David KÅ¯ta">

    <title>{ifset title}{include title|stripHtml} | {/ifset}{_app.title}</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{$basePath}/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{$basePath}/assets/plugins/adminlte/css/adminlte.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/happy-inputs@2.0.4/src/happy.css">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ublaboo-datagrid@6.2.24/assets/datagrid.css">
    <!-- Use this css for ajax spinners -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ublaboo-datagrid@6.2.24/assets/datagrid-spinners.css">
    <!-- Include this css when using FilterMultiSelect (silviomoreto.github.io/bootstrap-select) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.15/dist/css/bootstrap-select.css">
    <link rel="stylesheet" href="{$basePath}/assets/css/flag-icon/flag-icon.css">

    {*        <link rel="stylesheet" type="text/css" href="{$basePath}/assets/css/styles.css">*}
</head>
<body class="hold-transition sidebar-mini">
{snippet flashes}
    <script>
        function callFlashMessages() {
            {foreach $flashes as $flash}
            $(document).Toasts('create', {
                title: {$flash->message},
                body: {$flash->message},
                class: {$flash->type}
            });
            {/foreach}
        }
    </script>
{/snippet}
    <!-- Site wrapper -->
<div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
{*                <li class="nav-item">*}
{*                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>*}
{*                </li>*}
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
            </ul>


            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->

                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    UserName
                </li>

                <li class="nav-item dropdown">
                    <a id="base-upperNavbar-langInfoIcon" class="nav-link" data-toggle="dropdown" href="#">
                        <i class="flag-icon flag-icon-{_app.info.icon}"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right p-0">
                        <a  n:href="ChangeLocale! locale=>cs_CZ"
                           class="dropdown-item">
                            <i class="flag-icon flag-icon-cz mr-2"></i> {_app.locales.cs_CZ}
                        </a>

                        <a n:href="ChangeLocale! locale=>en_GB"
                           class="dropdown-item">
                            <i class="flag-icon flag-icon-gb mr-2"></i> {_app.locales.en_GB}
                        </a>

                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="row">
            <a href="{plink Homepage:}" class="brand-link text-center text-wrap col-12 flex-column">
                <span class="brand-text font-weight-light"> {_app.title} </span>
            </a>
            </div>

            <!-- Sidebar -->
            <div class="sidebar">

                {control menu}
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            {ifset name}<h1 id="base-caption" class="m-0">{include name}</h1>{/ifset}
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                {include content}

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0
            </div>
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights
            reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
</div>


    <!-- ./wrapper -->
{block scripts}

    <!-- jQuery -->
    <script src="{$basePath}/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="{$basePath}/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="{$basePath}/assets/plugins/adminlte/js/adminlte.min.js"></script>

    <script src="{$basePath}/assets/js/live-form-validation.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-ui-sortable@1.0.0/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/nette.ajax.js@2.3.0/nette.ajax.js"></script>
    {*    <script src="https://cdn.jsdelivr.net/npm/naja@1.8.3/dist/Naja.js"></script>*}
    {*    <script>*}
    {*        document.addEventListener('DOMContentLoaded', naja.initialize.bind(naja));*}
    {*    </script>*}
    <script src="https://cdn.jsdelivr.net/npm/ublaboo-datagrid@6.2.24/assets/datagrid.js"></script>

    <!-- It is recommended to include this JS file with just a few bits. It refreshes URL on non ajax request -->
    <script src="https://cdn.jsdelivr.net/npm/ublaboo-datagrid@6.2.24/assets/datagrid-instant-url-refresh.js"></script>

    <!-- Use this little extension for ajax spinners -->
    <script src="https://cdn.jsdelivr.net/npm/ublaboo-datagrid@6.2.24/assets/datagrid-spinners.js"></script>

    <!-- Include bootstrap-select.js when using FilterMultiSelect (silviomoreto.github.io/bootstrap-select) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.15/dist/js/bootstrap-select.js"></script>
    {*    <script src="{$basePath}/assets/js/scripts.js"></script>*}
{/block}

<script>
    $.nette.ext("initOnAjax",
        {
            success: function (payload) {
                callFlashMessages();
            }

        });
</script>
</body>
</html>
